{
  "extends": "../tsconfig.json",
  "include": ["./**/*.ts", "./**/*.tsx", "../cypress.d.ts", "support/component.tsx"],
  "compilerOptions": {
    "types": ["cypress", "@percy/cypress", "node"],
    "lib": ["es2015", "dom"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "allowJs": true,
    "noEmit": true,
    "baseUrl": "..",
    "paths": {
      "lib/*": ["lib/*"],
      "components/*": ["components/*"]
    }
  }
}
